<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- tous les style utilisÃ©s dans l'application -->
    <style name="widget.Jeu.TextInputLayer.firstPlayer" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">20sp</item>
        <item name="boxStrokeColor">@color/primaryOrange</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/primaryOrange</item>
        <item name="android:strokeColor">@color/primaryOrange</item>
        <item name="android:color">@color/primaryOrange</item>
    </style>

    <style name="Widget.Jeu.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:color">@color/primaryOrange</item>
        <item name="android:background">@color/primaryOrange</item>
    </style>

    <!--Application de base -->
    <style name="Theme.Jeu.parDefaut" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/primaryOrange</item>
    </style>

    <!-- Style des boutons -->
    <style name="Widget.Jeu.Button.orange" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primaryOrange</item>
        <item name="android:textSize">@dimen/taille_texte_button</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="Widget.Jeu.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="Widget.Jeu.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/lightgreen</item>
        <item name="android:textSize">@dimen/taille_texte_button</item>
    </style>

    <style name="Widget.jeu.TextView" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">@dimen/taille_texte_question</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Jeu.score" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/taille_score</item>
    </style>

    <style name="Widget.Jeu.Button.menu" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/taille_texte_button</item>
    </style>
</resources>