<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/StartLayoutGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eclair_vert"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <!-- bouton de vérification du joueur 2 -->
    <Button
        android:id="@+id/button_player_2"
        style="@style/Widget.Jeu.Button"
        android:layout_width="498dp"
        android:layout_height="51dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        android:rotation="180"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- afficheur de question pour le joueur 2 -->
    <TextView
        android:id="@+id/game_quest_2"
        style="@style/Widget.jeu.TextView"
        android:layout_width="499dp"
        android:layout_height="80dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="92dp"
        android:rotation="180"
        android:text="@string/Question_joueur_2"
        app:layout_constraintLeft_toLeftOf="@id/StartLayoutGame"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- afficheur du score pour le joueur 2 -->
    <TextView
        android:id="@+id/score_player_2"
        style="@style/Widget.Jeu.score"
        android:layout_width="175dp"
        android:layout_height="140dp"
        android:layout_marginLeft="540dp"
        android:layout_marginBottom="176dp"
        android:rotation="180"
        android:text="@string/Score_de_base"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/StartLayoutGame" />

    <!-- permet de retourner au menu -->
    <Button
        android:id="@+id/menu"
        style="@style/Widget.Jeu.Button"
        android:layout_width="126dp"
        android:layout_height="48dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="162dp"
        android:text="Menu"
        android:backgroundTint="@color/green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- permet de recommencer le jeu -->
    <Button
        android:id="@+id/rejouer"
        style="@style/Widget.Jeu.Button"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_marginLeft="464dp"
        android:layout_marginTop="162dp"
        android:text="Rejouer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- afficheur du score du joueur 1 -->
    <TextView
        android:id="@+id/score_player_1"
        style="@style/Widget.Jeu.score"
        android:layout_width="175dp"
        android:layout_height="140dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="28dp"
        android:text="@string/Score_de_base"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/StartLayoutGame" />

    <!-- afficheur de question du joueur 1 -->
    <TextView
        android:id="@+id/game_quest_1"
        style="@style/Widget.jeu.TextView"
        android:layout_width="500dp"
        android:layout_height="71dp"
        android:layout_marginLeft="196dp"
        android:layout_marginBottom="76dp"
        android:text="@string/Question_joueur_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/StartLayoutGame" />

    <!-- bouton de vérification du joueur 1 -->
    <Button
        android:id="@+id/button_player_1"
        style="@style/Widget.Jeu.Button"
        android:layout_width="498dp"
        android:layout_height="51dp"
        android:layout_marginLeft="196dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>